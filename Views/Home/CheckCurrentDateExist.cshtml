 <script type="text/javascript">
        function Confirm() {
            var input = $("<input />");
            input.attr("type", "hidden").attr("name", "confirm_value");
            if (confirm("Do you want to save data?")) {
                input.val("Yes");
            } else {
                input.val("No");
            }
            $("form")[0].appendChild(input[0]);
        }
    </script>
    @if (ViewBag.Message != null)
    {
        <script type="text/javascript">
            $(function () {
              alert("@ViewBag.Message")
            });
        </script>
    }